{
    "plugins": [
        "security"
    ],
    "extends": [
        "airbnb-base",
        "plugin:security/recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double"],
        "comma-dangle": "off",
        "no-console": "off",
        "camelcase": "off",
        "no-underscore-dangle": 0,
        "max-len": [
            "warn",
            80
        ],
        "object-shorthand": "off",
        "object-curly-newline": "off",
        "arrow-parens": [
            2,
            "as-needed",
            {
                "requireForBlockBody": true
            }
        ]
    }
}
